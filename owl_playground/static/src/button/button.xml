<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.Button" owl="1">
        <div>
            <h3>Choose your move:</h3>
            <button class="btn btn-primary m-2" t-on-click="onClickChoice('rock')">Rock</button>
            <button class="btn btn-primary m-2" t-on-click="onClickChoice('paper')">Paper</button>
            <button class="btn btn-primary m-2" t-on-click="onClickChoice('scissors')">Scissors</button>
        </div>
    </t>
</templates>


